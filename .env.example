# Copy to .env and fill in values
# Generate JWT_SECRET_KEY: openssl rand -hex 32

ENVIRONMENT=development
DEBUG=false

# SECURITY — MUST change in production
JWT_SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite+aiosqlite:///./secure_api.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/secure_api

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console   # "json" for production

# CORS — comma-separated origins
CORS_ORIGINS=["http://localhost:3000"]

# Rate limits (slowapi format: "N/period")
RATE_LIMIT_VIEWER=60/minute
RATE_LIMIT_ANALYST=200/minute
RATE_LIMIT_ADMIN=500/minute
